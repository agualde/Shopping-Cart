<h3>Current Orders:</h3>
<% if !@orders.empty? %>
 <table class="table">
    <thead>
      <tr>
        <th colspan="1">Created</th>
        <th colspan="1">Status</th>
        <th>Amount</th>
        <th>Id</th>
      </tr>
    </thead>

        <tbody>
          <% @orders.order('created_at DESC').each do |order| %>
