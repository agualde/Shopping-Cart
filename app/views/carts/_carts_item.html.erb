<div class="min-height">
        <% @order_items.order("created_at").each do |item| %>
        <div class="cart-details">
            <div class="d-flex justify-start align-items-center">
                <h3 class="m-0"><%= link_to item.product.name, product_path(item.product.id), class:'text-decoration-none', style:'color:black' %></h3>
                <h6 class="ml-2 m-0" style="font-size: 12px;">(<%= number_to_currency item.product.price, :unit => :€ %>)</h6>
            </div>

            <%= form_for item, remote: true do |f| %>

                <%= f.hidden_field :product_id, :value => item.product.id %>
                <%= f.number_field :quantity, :value => item.quantity.to_i, class: "text-center" %>
                <%= f.submit 'Update Cart', class: 'add_to_cart' %>

                <%= link_to "[Delete]", order_item_path(item), method: :delete, remote: true, class: "text-decoration-none ml-2"  %>

            <% end %>
        </div>

            <h6 class="d-flex justify-content-end subtotal-margin" style="font-size: 14px;">Subtotal: <%= number_to_currency item.total, :unit => :€ %></h6>

        <% end %>
</div>


<div class="d-flex justify-content-between">
        <div class="cart-total">
            <h3>Total:</h3>
            <h3 class="total-margin"><%= number_to_currency current_order.subtotal, :unit => :€ %></h3>
        </div>  
        <% if !current_order.order_items.empty? %>
            <%= form_tag checkouts_path do %>
                <%= hidden_field_tag 'order_id', current_order.id %>
                <%= submit_tag 'Checkout', class: 'btn btn-primary' %>
            <% end %>
        <% end %>
</div>